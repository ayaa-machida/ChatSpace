.messagelist
  .messagelist__create
    .messagelist__name
      = message.user.name
    .messagelist__post_date
      = message.created_at
  .messagelist__comment
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
